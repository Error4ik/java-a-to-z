<web-app>
    <filter>
        <filter-name>Authentication Filter</filter-name>
        <filter-class>ru.job4j.controllers.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Authentication Filter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>ru.job4j.controllers.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>ru.job4j.controllers.Index</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Delete</servlet-name>
        <servlet-class>ru.job4j.controllers.DeleteUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Edit</servlet-name>
        <servlet-class>ru.job4j.controllers.Edit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Edit</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Add</servlet-name>
        <servlet-class>ru.job4j.controllers.Add</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Country</servlet-name>
        <servlet-class>ru.job4j.controllers.json.CountryJson</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Country</servlet-name>
        <url-pattern>/country</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>City</servlet-name>
        <servlet-class>ru.job4j.controllers.json.CityJson</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>City</servlet-name>
        <url-pattern>/city</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Role</servlet-name>
        <servlet-class>ru.job4j.controllers.json.RoleJson</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Role</servlet-name>
        <url-pattern>/role</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Get User</servlet-name>
        <servlet-class>ru.job4j.controllers.json.GetSessionUserJson</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Get User</servlet-name>
        <url-pattern>/getUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Current User</servlet-name>
        <servlet-class>ru.job4j.controllers.json.CurrentUserJson</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Current User</servlet-name>
        <url-pattern>/current</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Log Out</servlet-name>
        <servlet-class>ru.job4j.controllers.json.LogOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Log Out</servlet-name>
        <url-pattern>/log-out</url-pattern>
    </servlet-mapping>
</web-app>

